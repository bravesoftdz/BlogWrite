<fw:AcrylicWindow x:Class="BlogWrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlogWrite"
        xmlns:helpers="clr-namespace:WpfApp1.Helpers"
        helpers:EnableDragHelper.EnableDrag="True"
        helpers:MaximizeDoubleClickHelper.MaximizeDoubleClick="True"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        fw:AcrylicWindow.Enabled="True"
        fw:AcrylicWindow.ShowTitleBar="True"
        fw:AcrylicWindow.ExtendViewIntoTitleBar="True"
        BorderThickness="0"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="BlogWrite" Height="450" Width="800">
    <fw:AcrylicWindow.Resources>
        <local:MainViewModel x:Key="MainViewModel"/>
    </fw:AcrylicWindow.Resources>
    <Grid Background="Black" Opacity="0.8">
        
    </Grid>
</fw:AcrylicWindow>
